<h1>Business Service Lines</h1>

<table>
  <thead>
    <tr>
      <th>Organisational unit</th>
      <th>Name</th>
      <th>Tier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_service_lines.each do |business_service_line| %>
      <tr>
        <td><%= business_service_line.organisational_unit_id %></td>
        <td><%= business_service_line.name %></td>
        <td><%= business_service_line.tier %></td>
        <td><%= link_to 'Show', business_service_line %></td>
        <td><%= link_to 'Edit', edit_business_service_line_path(business_service_line) %></td>
        <td><%= link_to 'Destroy', business_service_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

