<%= form_for ['admin', institution] do |f| %>
  <%= render 'layouts/partials/form_errors', instance: institution %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Institution Name', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control', placeholder: 'Institution Description', required: true %>
  </div>

  <div class="form-check">
    <%= f.check_box :active, { class: 'form-check-input' }, true, false %>
    <%= f.label :active, class: 'form-check-label' %>
  </div>

  <div class="form-group">
    <%= f.label  :product_ids, 'Products (Relevant products for this type of institution)' %>
    <%= f.select :product_ids, options_for_select(@products.map { |product| [product.name, product.id] }, institution.product_ids), {}, multiple: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
    <%= link_to 'Cancel', admin_institutions_path, class: 'btn btn-danger btn-sm' %>
  </div>
<% end %>
