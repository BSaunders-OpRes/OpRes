<%= form_for institution, url: new_or_create ? admin_institutions_path : admin_institution_path, method: new_or_create ? :post : :patch do |f| %>
  <%= render 'layouts/partials/form_errors', instance: institution %>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control rounded-0 shadow-none', placeholder: 'Institution Name', required: true %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control rounded-0 shadow-none', placeholder: 'Institution Description', required: true %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <%= f.label  :pre_product_ids, 'Products (Relevant products for this type of institution)' %>
      <%= f.select :pre_product_ids, options_for_select(@products.map { |product| [product.name, product.id] }, institution.pre_product_ids), {}, multiple: true, class: 'form-control shadow-none' %>
    </div>
  </div>

  <div class="row d-flex align-items-center">
    <div class="form-group col-md-12 text-right mb-0">
      <%= f.submit class: 'btn primary-btn font-12 font-600' %>
    </div>
  </div>
<% end %>
