<div class="row">
  <div class="col-sm-12 col-md-10 col-lg-8 col-xxl-8 mx-auto">
    <div class="card border-0 shadow">
      <div class='card-body px-4'>
        <div class="back-btn-header mb-4 mt-3">
          <%= link_to admin_channels_path, class: 'text-decoration-none text-dark' do  %>
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
            <span class="ml-1">Back</span>
          <% end %>
        </div>
        <h4 class="my-4 font-600 text-capitalize">Add channel type</h4>
        <p class="font-14 mb-4">Please use this section to submit new channel types into your OpRes data model.</p>
        <%= render 'admin/channels/partials/form', channel: @channel %>
      </div>
    </div>
  </div>
</div>
