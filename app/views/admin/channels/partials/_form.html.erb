<%= form_for channel, url: new_or_create ? admin_channels_path : admin_channel_path, method: new_or_create ? :post : :patch do |f| %>
  <%= render 'layouts/partials/shared/form_errors', instance: channel %>

  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Channel Name', required: true %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control', placeholder: 'Channel Description', required: true %>
    </div>
  </div>

  <div class="row d-flex align-items-center">
    <div class="form-group col-md-12 text-right mb-0">
      <%= f.submit class: 'btn primary-btn font-12 font-600' %>
    </div>
  </div>
<% end %>
