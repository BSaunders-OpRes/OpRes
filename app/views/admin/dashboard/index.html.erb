<div class="row" id="management-dashboard">
  <div class="col-12"><h2 class="font-700 text-capitalize font-sm-24">Welcome Application Admin</h2></div>
</div>
<div class="row mt-md-5 mt-3 d-flex">
  <div class="col-md-6 col-lg-3 mb-lg-0 mb-4">
    <div class="card border-0 shadow-sm pie-high-chart">
      <div class="card-header bg-white text-center">
        <p class="font-14 text-capitalize font-600">Sign Up</p>
        <div class="donut-content donut-chart-react">
          <%= react_component('highcharts/donut', { data: @users_percentage_by_month, render_to: 'first-donut' }, { class: 'h-100' }) %>
          <div class="donut-value font-50 font-700"><%= @users_total %></div>
        </div>
      </div>
      <div class="card-body">
        <% @users_by_month.each_with_index do |(k, v), index| %>
          <div class="tiers d-flex justify-content-between align-items-center mb-3">
            <div class="color-tier d-flex align-items-center">
              <div class="circle green-<%= index + 1 %>"></div>
              <span class="font-12 font-xxl-14 font-400 ml-2"><%= k.strftime('%b') %></span>
            </div>
            <span class="font-12 font-xxl-14 font-700"><%= v %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-lg-9">
    <div class="card">
      <div class="card-header">
        <h3>Organisations</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table custom-table font-12 m-0">
            <thead>
              <tr>
                <th>Organisation Name</th>
                <th>User Counts</th>
              </tr>
            </thead>
            <% @organizations.each do |organization| %>
              <tbody>
                <tr>
                  <td><%= organization.name %></td>
                  <td><%= organization.users.size %></td>
                </tr>
                <tr>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
