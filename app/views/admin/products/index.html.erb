<div class="text-right mb-2">
  <%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary' %>
</div>

<div class="listings">
  <% if @products.present? %>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Active</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.active ? 'Yes' : 'No' %></td>
            <td>
              <%= link_to 'View', admin_product_path(product), class: 'btn btn-secondary btn-sm' %>
              <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-secondary btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-primary" role="alert">
      No products are created yet!
    </div>
  <% end %>
</div>
