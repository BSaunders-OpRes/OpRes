<div class="sidebar h-100" >
  <div class="sidebar-header py-4 border-bottom">
    <div class="sidebar-logo-container d-flex align-items-center ml-4">
      <i id="close_sidebar" class="fa fa-times font-18" aria-hidden="true"></i>
      <div class="logo-box ml-3">
        <%= link_to determine_user_redirect_path do %>
          <%= image_pack_tag 'media/images/logo.png', class: 'img-fluid' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-flex flex-column justify-content-between" id="left-navigational-sidebar">
    <ul class="list-unstyled mb-5">
      <li class="d-flex pl-4 align-items-center">
        <i class="fa fa-home font-18" aria-hidden="true"></i>
        <%= link_to 'Resilience Data Hub', organisation_dashboard_index_path, class: 'ml-3 font-14 text-decoration-none font-600 text-capitalize py-4 close-bar' %>
      </li>
        <li class="d-flex pl-4 align-items-center">
          <i class="fa fa-list-ul" aria-hidden="true"></i>
          <%= link_to 'Administration Portal', organisation_administration_portal_index_path, class: 'ml-3 font-14 text-decoration-none font-600 text-capitalize py-4 close-bar' %>
        </li>
<!--       <li class="d-flex pl-4 align-items-center">
        <i class="fa fa-calculator font-18" aria-hidden="true"></i>
        <%= link_to 'Resilience Calculator', organisation_resiliences_path, class: 'ml-3 font-14 text-decoration-none font-600 text-capitalize py-4 close-bar' %>
      </li> -->
      <% if current_user.root_user? %>
        <li class="d-flex pl-4 align-items-center">
          <i class="fa fa-cog" aria-hidden="true"></i>
          <a class="ml-3 font-14 text-decoration-none dropdown-toggle font-600 text-capitalize py-4 upper-menu" href="#homeSubmenu" data-toggle="collapse" aria-expanded="false">System Administration</a>
        </li>
        <ul class="collapse list-unstyled submenu" id="homeSubmenu">
          <li class="d-flex pl-4 align-items-center ml-3">
            <i class="fa fa-briefcase" aria-hidden="true"></i>
            <a class="ml-3 font-14 text-decoration-none dropdown-toggle font-600 text-capitalize py-4" href="#on-boarding" data-toggle="collapse" aria-expanded="false">onboarding</a>
          </li>
          <ul class="collapse list-unstyled " id="on-boarding">
            <li class="d-flex pl-4 align-items-center ml-4">
              <%= link_to 'Onboarding Wizard', organisation_journey_path('welcome'), class: 'ml-3 pl-2 font-14 text-decoration-none font-600 text-capitalize py-3 close-bar' %>
            </li>
            <li class="d-flex pl-4 align-items-center  ml-4">
              <%= link_to 'Institutions', organisation_institutions_path, class: 'ml-3 font-14 pl-2 text-decoration-none font-600 text-capitalize py-3 close-bar' %>
            </li>
            <li class="d-flex pl-4 ml-2 align-items-center ml-4">
              <%= link_to 'Products', organisation_products_path, class: 'ml-3 font-14 text-decoration-none pl-2 font-600 text-capitalize py-3 close-bar' %>
            </li>
            <li class="d-flex pl-4 ml-2 align-items-center ml-4">
              <%= link_to 'Channels', organisation_channels_path, class: 'ml-3 font-14 text-decoration-none pl-2 font-600 text-capitalize py-3 close-bar' %>
            </li>
          </ul>
          <li class="d-flex pl-4 align-items-center ml-3">
            <i class="fa fa-user" aria-hidden="true"></i>
            <%= link_to 'Users', organisation_admins_path, class: 'ml-3 font-14 text-decoration-none pl-2 font-600 text-capitalize py-4 close-bar' %>
          </li>
        </ul>
      <% end %>
    </ul>


    <div class="coming-soon gradient-border card have-issue d-flex flex-column justify-content-center mx-auto mt-3">
      <div class="card-body align-items-center text-center">
        <i class="fa fa-calculator font-20 color-animation" aria-hidden="true"></i>
        <p class="text-capitalize">
          <span class="font-18 font-600 text-green">
           resilience calculator  
          </span>
          <span class="font-14 text-black font-600">
            coming soon
          </span>
        </p>
      </div>
    </div>
    <div class="have-issue d-flex flex-column p-3 justify-content-center mx-auto mt-5">
      <div class="img-container text-center">
        <%= image_pack_tag 'media/images/issue.png', class: 'img-fluid' %>
      </div>
      <a href="mailto:Support@opres.uk" class="btn dark-btn font-600">
      <i class="fa fa-life-ring text-white" aria-hidden="true"></i>
      <span class="ml-2 font-12">Contact Support Desk</span>
      </a>
    </div>
  </div>
</div>
