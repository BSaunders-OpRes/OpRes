<div class="row">
  <div class="col-sm-12 col-md-10 col-lg-8 col-xxl-8 mx-auto">
    <div class='card border-0 shadow'>
      <div class='card-body p-0'>
        <div class="listings">
          <div class="d-flex justify-content-between align-items-center py-3 px-4 mt-3">
            <h5 class="text-capitalize font-700">Products</h5>
            <%= link_to new_organisation_product_path, class: 'font-600 text-capitalize font-12 ml-auto text-black text-decoration-none d-flex align-items-baseline' do %>
              <i class="fa fa-plus-circle mr-1 font-18"></i>
              <span class="ml-2 font-14">Add New</span>
            <% end %>
          </div>
          <div class="px-4">
            <div class="table-search-field">
              <%= form_tag search_by_name_organisation_products_path, method: :get, remote: true do %>
                <i class="fa fa-search text-dark font-14" aria-hidden="true"></i>
                <%= text_field_tag 'query', nil, placeholder: 'Search Products', class: "w-100 form-control border-0 shadow-none", id: "country-search-filter", onkeyup: 'RailsUJS.fire(this.form, "submit")' %>
                <span for="" class="m-0 font-13 clear-input-field font-600 text-danger" data-url="<%= search_by_name_organisation_products_path %>">Clear</span>
              <% end %>
            </div>
          </div>
          <div id='products-data-render'>
            <%= render 'organisation/products/partials/product_table', products: @products%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
