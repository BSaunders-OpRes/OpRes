<%= form_for product, url: new_or_create ? organisation_products_path(institution_id: @institution&.id, index: @index) : organisation_product_path, method: new_or_create ? :post : :patch, remote: @institution.present? do |f| %>
  <%= render 'layouts/partials/shared/form_errors', instance: product %>
  <div class="row align-items-center mb-3">
    <div class="col-md-12 form-group">
      <%= f.label :name, class: 'text-capitalize' %>
      <%= f.text_field :name, class: 'w-100 form-control font-12 h-auto py-3 shadow-none', placeholder: 'Product Name', required: true %>
    </div>
    <div class="col-md-12 form-group">
      <%= f.label :description, class: 'text-capitalize' %>
      <%= f.text_area :description, class: 'w-100 form-control font-12 shadow-none', placeholder: 'Product Description', required: true %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label  :channel_ids, 'Channels (Relevant channels for this type of product)' %>
      <%= f.select :channel_ids, options_for_select(@channels.map { |channel| [channel.name, channel.id] }, product.channel_ids), {}, multiple: true, class: 'w-100 form-control font-12 h-auto py-3 shadow-none' %>
    </div>
  </div>
  <div class="d-flex mt-5">
    <%= f.submit class: 'btn btn-md font-600 text-capitalize font-12 ml-auto dark-btn w-25' %>
  </div>
<% end %>
