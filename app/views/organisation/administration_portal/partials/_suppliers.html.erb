<% suppliers&.each do |supplier| %>
  <tr>
    <td class="font-12 py-0 font-xxl-14 pl-0 text-black"><%= supplier.name %></td>
    <td class="font-12 py-0 font-xxl-14 px-2 font-400 text-capitalize"><%= supplier.unit&.name %></td>
    <td class="font-12 py-0 font-xxl-14 px-2 font-400 text-capitalize"><%= supplier.unit&.parent&.name %></td>
    <td class= 'px-1 font-12 py-0 d-flex py-4'>
      <%= link_to 'Edit', edit_organisation_supplier_path(supplier), class: 'mx-1 text-black text-uppercase font-600 font-12' %>
      <%= link_to 'View', organisation_supplier_path(supplier), class: 'mx-1 text-black text-uppercase font-600 font-12' %>
      <%= link_to 'Delete', organisation_supplier_path(supplier), data: { confirm: "Are you sure you want to delete this record?" }, class: 'mx-1 text-black text-uppercase font-600 font-12', method: :delete%>
    </td>
  </tr>
<% end %>
