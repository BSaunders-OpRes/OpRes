<%= form_for admin, url: new_or_create ? organisation_admins_path : organisation_admin_path, method: new_or_create ? :post : :patch do |f| %>
  <%= render 'layouts/partials/form_errors', instance: admin %>
  <div class="row align-items-center mb-3">
    <div class="col-md-6">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'w-100 form-control font-12 h-auto py-3 shadow-none', placeholder: 'First Name' %>
    </div>
    <div class="col-md-6">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'w-100 form-control font-12 h-auto py-3 shadow-none', placeholder: 'Last Name' %>
    </div>
  </div>

  <div class="row align-items-center mb-3">
    <div class="col-md-6">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'w-100 form-control font-12 h-auto py-3 shadow-none', placeholder: 'Email', required: true %>
    </div>
    <div class="col-md-6">
      <%= f.label :managing_unit, 'Unit' %>
      <%= select_tag :managing_unit, options_for_select(organisation_dropdown_options, admin&.managing_unit&.id), multiple: false, class: 'w-100 form-control font-12 h-auto py-3 shadow-none' %>
    </div>
  </div>

  <div class="row align-items-center mb-3">
    <div class="col-md-6">
      <%= f.label :password, class: 'text-capitalize font-14 font-600 mb-2' %>
      <%= f.password_field :password, class: 'w-100 form-control font-12 h-auto py-3 shadow-none', placeholder: 'Password', required: new_or_create %>
    </div>
    <div class="col-md-6">
      <%= f.label :password_confirmation, class: 'text-capitalize font-14 font-600 mb-2' %>
      <%= f.password_field :password_confirmation, class: 'w-100 form-control font-12 h-auto py-3 shadow-none', placeholder: 'Password Confirmation', required: new_or_create %>
    </div>
  </div>

  <div class="d-flex mt-5">
    <%= f.submit class: 'btn btn-md font-600 text-capitalize font-12 ml-auto dark-btn w-25' %>
  </div>
<% end %>
