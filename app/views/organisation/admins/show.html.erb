<div class="row mt-5">
  <div class="col-md-7 mx-auto">
    <div class="card shadow">
      <div class="p-3">
        <div class="back-btn-header mb-4">
          <%= link_to organisation_admins_path, class: 'text-dark' do %>
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
            <span class="ml-1">Back</span>
          <% end %>
        </div>
        <div class="show-page">
          <div class="row align-items-center">
            <div class="col-md-4">
              <div class="show-img">
                <%= image_pack_tag 'media/images/user-img.png', class: 'img-fluid' %>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card border-0">
                <div class="card-body">
                  <div class="row pb-4 border-bottom">
                    <div class="col-md-6">
                      <h6 class="font-14 text-capitalize font-700">name</h6>
                    </div>
                    <div class="col-md-6">
                      <h5 class="font-14 text-capitalize text-secondary"><%= @admin.name %></h5>
                    </div>
                  </div>
                  <div class="row py-4 border-bottom">
                    <div class="col-md-6">
                      <h6 class="font-14 text-capitalize font-700">email</h6>
                    </div>
                    <div class="col-md-6">
                      <h6 class="font-14 text-secondary"><%= @admin.email %></h6>
                    </div>
                  </div>
                  <div class="row py-4 border-bottom">
                    <div class="col-md-6">
                      <h6 class="font-14 text-capitalize font-700">role</h6>
                    </div>
                    <div class="col-md-6">
                      <h5 class="font-14 text-capitalize text-secondary"><%= @admin.role.humanize %></h5>
                    </div>
                  </div>
                  <div class="row py-4 border-bottom">
                    <div class="col-md-6">
                      <h6 class="font-14 text-capitalize font-700">organisational name</h6>
                    </div>
                    <div class="col-md-6">
                      <h5 class="font-14 text-capitalize text-secondary"><%= organisational_unit.name %></h5>
                    </div>
                  </div>
                  <div class="row py-4">
                    <div class="col-md-6">
                      <h6 class="font-14 text-capitalize font-700">managing unit</h6>
                    </div>
                    <div class="col-md-6">
                      <h5 class="font-14 text-capitalize text-secondary"><%= @admin.managing_unit&.name || 'N/A' %></h5>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
