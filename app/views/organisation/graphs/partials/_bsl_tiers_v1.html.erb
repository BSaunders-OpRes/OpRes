<% if data.blank? %>
  <div class="card border-0 shadow-sm pie-high-chart rounded-50">
    <div class="card-header bg-white text-center">
      <p class="font-14 text-capitalize font-600 chart-header-title"></p>
      <div class="donut-content h-75">
        <div class="empty-donut-block py-3 px-5"></div>
      </div>
    </div>
    <div class="card-body">
      <div class="tiers d-flex justify-content-between align-items-center mb-1">
        <div class="empty-donut-line px-5 mb-2 py-3"></div>
      </div>
      <div class="tiers d-flex justify-content-between align-items-center mb-1">
        <div class="empty-donut-line px-5 mb-2 py-3"></div>
      </div>
      <div class="tiers d-flex justify-content-between align-items-center mb-1">
        <div class="empty-donut-line px-5 mb-2 py-3"></div>
      </div>
      <div class="tiers d-flex justify-content-between align-items-center mb-1">
        <div class="empty-donut-line px-5 mb-2 py-3"></div>
      </div>
    </div>
    <div class="card-footer bg-white">
      <div class="tiers d-flex justify-content-between align-items-center mb-1">
        <div class="empty-donut-line px-5 py-1"></div>
      </div>
    </div>
  </div>
<% else %>
  <div class="card border-0 pie-high-chart rounded-50">
    <div class="card-header h-240px border-0 bg-white text-center">
      <div class="donut-content">
        <%= react_component('highcharts/donut', { data: data.dig(:graph), render_to: 'bsl-tiers-graph' }, { class: 'h-200-highchart' }) %>
        <div class="d-flex donut-value flex-column">
          <div class="font-50 font-700"><%= data.dig(:total) %></div>
          <div class="font-14 font-600">Total Business Services</div>
        </div>
      </div>
    </div>
    <div class="card-body">
     <% data.dig(:graph).each do |graph| %>
        <div class="tiers d-flex justify-content-between align-items-center mb-3">
          <div class="color-tier d-flex align-items-center">
            <div class="circle" style="background-color: <%= graph.dig(:color) %>"></div>
            <span class="font-12 font-400 ml-2"><%= graph.dig(:name) %></span>
          </div>
          <span class="font-12 font-700"><%= graph.dig(:value) %></span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>













