<% if data.present? %>
  <div class="card border-0 rounded-50">
    <div class="card-body">
      <div class="d-flex align-items-center justify-content-between">
        <h5 class="font-400 text-capitalize">overview</h5>
        <i class="fa fa-ellipsis-v"></i>
      </div>
      <div class="row align-items-center mt-3">
        <div class="col-md-4">
          <div class="position-relative">
            <%= react_component('highcharts/donut', { data: render_data(data), render_to: 'donut' }, { class: 'h-200px d-flex align-items-center' }) %>
            <span class="position-absolute center-position font-md-30 font-40 font-600"><%= data.dig(:overall, :total_match) + data.dig(:overall, :total_meet) + data.dig(:overall, :total_exceed) %></span>
          </div>
        </div>
        <div class="col-md-8">
          <!-- <div class="d-flex justify-content-between align-items-center font-12 font-xxl-14 my-3">
            <span class="font-500 text-capitalize">Total N# of 3rd Party System</span>
            <span class="font-700">34</span>
          </div> -->
          <div class="d-flex justify-content-between align-items-center font-12 font-xxl-14 my-3">
            <span class="font-500 text-capitalize">Total N# of match tolerance</span>
            <span class="font-700"><%= data.dig(:overall, :total_match) %></span>
          </div>
          <div class="d-flex justify-content-between align-items-center font-12 font-xxl-14 my-3">
            <span class="font-500 text-capitalize">Total N# of Meet impact tolerance</span>
            <span class="font-700"><%= data.dig(:overall, :total_meet) %></span>
          </div>
          <div class="d-flex justify-content-between align-items-center font-12 font-xxl-14 my-3">
            <span class="font-500 text-capitalize">Total N# of exceeds impact tolerance</span>
            <span class="font-700"><%= data.dig(:overall, :total_exceed) %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>