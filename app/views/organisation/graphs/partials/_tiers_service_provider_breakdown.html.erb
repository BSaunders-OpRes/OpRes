<% if data.blank? %>
  <div class="">
    <div class="box">
      <p class="px-2 font-16 text-capitalize font-400 chart-header-title mb-4 ">Service Provider Breakdown</p>
      <div class="border-0 pie-high-chart overflow-hidden rounded-50 d-flex justify-content-center">
        <div class="w-50 card-header p-2 bg-white text-center border-0">
          <div class="empty-donut-block">
            <div class="donut-value font-30 font-700"></div>
          </div>
        </div>
        <div class="card-body mt-3 p-2">
          <div class="empty-donut-line px-5 mb-2"></div>
          <div class="empty-donut-line px-5 mb-2"></div>
          <div class="empty-donut-line px-5 mb-2"></div>
          <div class="empty-donut-line px-5 mb-2"></div>
          <div class="empty-donut-line px-5 mb-2"></div>
          <div class="empty-donut-line px-5 mb-2"></div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="card-body p-2">
    <p class="px-2 font-16 text-capitalize font-400 chart-header-title mb-4 ">Service Provider Breakdown</p>
    <div class="pie-high-chart row">
      <div class="col-sm-6">
        <div class="card-header p-2 bg-white text-center border-0">
          <div class="donut-content">
            <%= react_component('highcharts/donut', { data: data.dig(:overall_service_provider, :graph), render_to: 'donut-chp' }, { class: 'h-160-highchart-flex' }) %>
            <div class="donut-value font-30 font-700"><%= data.dig(:overall_service_provider, :total) %></div>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="card-body mt-3 p-2">
          <% data.dig(:overall_service_provider, :graph)&.each do |graph| %>
            <div class="tiers d-flex justify-content-between align-items-center mb-3">
              <div class="color-tier d-flex align-items-center">
                <div class="circle mr-2" style="background-color: <%= graph[:color] %>"></div>
                  <%= image_tag graph[:logo], class: 'img-fluid' %>
                  <span class="font-12 font-xxl-14 flex-1 font-400 ml-2"><%= graph[:name] %></span>
              </div>
              <span class="font-12 font-xxl-14 font-700"><%= graph[:value] %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>    
<% end %>
