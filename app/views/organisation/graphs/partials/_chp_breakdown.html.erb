<% if data.blank? %>
  <div class="card">
    <div class="card-body">
      <div class="box bg-body-color rounded bg-transparent">
      <h6 class="font-12">Cloud Hosting Provider Ratio</h6>
      <div class="border-0 pie-high-chart overflow-hidden rounded-50">
        <div class="col-md-12 card-header h-230px d-flex align-items-center px-0 py-2 bg-body-color text-center border-0">
          <div class="empty-donut-block py-3 px-5"></div>
        </div>
        <div class="col-md-12 card-body py-3 px-0">
          <div class="empty-donut-line px-5 mb-2"></div>
          <div class="empty-donut-line px-5 mb-2"></div>
          <div class="empty-donut-line px-5 mb-2"></div>
          <div class="empty-donut-line px-5 mb-2"></div>
        </div>
      </div>
    </div>
    </div>
  </div>
  <% else %>
  <div class="card border-0 shadow-sm pie-high-chart overflow-hidden rounded-50 min-h-560"
  id="cloud-service-provider-breakdown" >
    <div class="card-header bg-white text-center">
      <p class="font-14 text-capitalize font-600 chart-header-title">Cloud Service Provider breakdown</p>
      <div class="donut-content">
        <div id="second-donut" class="donut"></div>
        <div class="donut-value font-50 font-700">0</div>
      </div>
    </div>
    <div class="card-body">
      <div class="tiers d-flex justify-content-between align-items-center mb-3">
        <div class="color-tier d-flex align-items-center">
          <div class="circle green-1"></div>
          <span class="font-12 font-400 ml-2">AWS</span>
        </div>
        <span class="font-12 font-700">0</span>
      </div>
      <div class="tiers d-flex justify-content-between align-items-center mb-3">
        <div class="color-tier d-flex align-items-center">
          <div class="circle green-2"></div>
          <span class="font-12 font-400 ml-2">GCP</span>
        </div>
        <span class="font-12 font-700">0</span>
      </div>
      <div class="tiers d-flex justify-content-between align-items-center mb-3">
        <div class="color-tier d-flex align-items-center">
          <div class="circle green-3"></div>
          <span class="font-12 font-400 ml-2 text-capitalize">Azure</span>
        </div>
        <span class="font-12 font-700">0</span>
      </div>
      <div class="tiers d-flex justify-content-between align-items-center">
        <div class="color-tier d-flex align-items-center">
          <div class="circle green-4"></div>
          <span class="font-12 font-400 ml-2 text-capitalize">Private Cloud</span>
        </div>
        <span class="font-12 font-700">0</span>
      </div>
    </div>
    <div class="card-footer text-center bg-white">
      <%= link_to 'view all', organisation_dashboard_path('cloud_service_provider_breakdown'),class: 'font-12 text-capitalize font-600 border-bottom-black text-dark text-decoration-none' %>
    </div>
  </div>
<% end %>
