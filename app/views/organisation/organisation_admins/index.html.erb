<div class="row">
  <div class="col-md-7 mx-auto">
    <div class="d-flex justify-content-between align-items-center py-5">
      <h3 class="text-capitalize font-600">Organisation Admin</h3>
      <div class="dropdown ml-3 dropdown-radius-btn">
        <%= link_to new_organisation_organisation_admin_path, :'type' => 'button', :'data-toggle' => 'dropdown', :'aria-haspopup' => 'true', :'aria-expanded' => 'false', :'id' => 'dropdownMenuButton', class: 'btn btn-lg font-20 text-black text-decoration-none dark-btn d-flex align-items-center' do %>
          <i class="fa fa-plus-circle mr-1 font-20"></i>
          <span class="font-14 mr-4 ml-1">Add New</span>
          <i class="fa fa-caret-down font-12 ml-auto" aria-hidden="true"></i>
        <% end %>
        <div class="dropdown-menu py-0 px-0" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item font-12 px-3 py-3 border-bottom rounded-0 text-capitalize font-700" href="#">service line</a>
          <a class="dropdown-item font-12 px-3 py-3 border-bottom rounded-0 text-capitalize font-700" href="#">service line via upload</a>
          <a class="dropdown-item font-12 px-3 py-3 border-bottom rounded-0 text-capitalize font-700" href="#">Supplier</a>
          <a class="dropdown-item font-12 px-3 py-3 rounded-0 text-capitalize font-700" href="#">Supplier via upload</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-7 mx-auto">
    <div class="card shadow">
      <div class="d-flex justify-content-between align-items-center py-3 px-4 mt-3">
        <h5 class="text-capitalize font-700">Organisation Admin</h5>
        <%= link_to new_organisation_organisation_admin_path, class: 'font-600 text-capitalize font-12 ml-auto text-black text-decoration-none d-flex' do %>
          <i class="fa fa-plus-circle mr-1 font-20" aria-hidden="true"></i>
          <span class="ml-2 font-14">Add New</span>
        <% end %>
        <div class="dropdown ml-3">
          <a class="font-20 text-black text-decoration-none" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </div>
      </div>
      <div class="table-search-field px-4 mb-2">
        <i class="fa fa-search text-dark font-14" aria-hidden="true"></i>
        <input type="text" placeholder="search institutions" class="w-100 form-control border-0 shadow-none">
      </div>
      <div class="table-responsive">
        <% if @org_admins.present? %>
          <table class="table custom-table font-14 m-0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @org_admins.each do |org_admin| %>
                <tr>
                  <td class="text-dark"><%= org_admin.name %></td>
                  <td><%= org_admin.email %></td>
                  <td>
                    <%= link_to 'View', organisation_organisation_admin_path(org_admin), class: 'font-14 font-600 mx-1 text-dark' %>
                    <%= link_to 'Edit', edit_organisation_organisation_admin_path(org_admin), class: 'font-14 font-600 mx-1 text-dark' %>
                    <%= link_to 'Delete', organisation_organisation_admin_path(org_admin), method: :delete, data: { confirm: 'Are you sure?' }, class: 'font-14 font-600 mx-1 text-dark' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="alert alert-primary m-0" role="alert">
            No Organisation Admins are created yet!
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
