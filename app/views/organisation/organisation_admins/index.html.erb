<div class="row mt-5">
  <div class="col-md-7 mx-auto">
    <div class="card shadow">
      <div class="d-flex justify-content-between align-items-center py-3 px-4 mt-3">
        <h5 class="text-capitalize font-700">Organisation Admin</h5>
        <%= link_to new_organisation_organisation_admin_path, class: 'font-600 text-capitalize font-12 ml-auto text-black text-decoration-none d-flex' do %>
          <i class="fa fa-plus-circle mr-1 font-20" aria-hidden="true"></i>
          <span class="ml-2 font-14">Add New</span>
        <% end %>
        <!-- <div class="dropdown ml-3">
          <a class="font-20 text-black text-decoration-none" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </div> -->
      </div>
      <div class="table-search-field px-4 mb-2">
        <i class="fa fa-search text-dark font-14" aria-hidden="true"></i>
        <input type="text" placeholder="search institutions" class="w-100 form-control border-0 shadow-none">
      </div>
      <div class="table-responsive">
        <% if @org_admins.present? %>
          <table class="table custom-table font-12 m-0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @org_admins.each do |org_admin| %>
                <tr>
                  <td class="text-dark"><%= org_admin.name %></td>
                  <td><%= org_admin.email %></td>
                  <td>
                    <%= link_to 'View', organisation_organisation_admin_path(org_admin), class: 'font-12 font-700 mx-1 text-dark text-uppercase' %>
                    <%= link_to 'Edit', edit_organisation_organisation_admin_path(org_admin), class: 'font-12 font-700 mx-1 text-dark text-uppercase' %>
                    <%= link_to 'Delete', organisation_organisation_admin_path(org_admin), method: :delete, data: { confirm: 'Are you sure?' }, class: 'font-12 font-700 mx-1 text-dark text-uppercase' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="alert alert-primary m-0" role="alert">
            No Organisation Admins are created yet!
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
