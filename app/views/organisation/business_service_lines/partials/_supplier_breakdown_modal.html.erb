<div class="modal px-2 fade mt-3 pt-5" id="sup_mod" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog max-width-sm-75 w-100 mx-auto">
    <div class="modal-content">
      <div class="modal-header border-0 pb-0">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body p-3">
        <div class="filter  d-flex justify-content-between mb-4 align-items-start">
          <div class="left d-flex align-items-center">
            <h5 class="modal-title text-capitalize font-600" id="exampleModalLabel">"<%= data.first.dig(:supplier_name) %>" Critical & Important Steps Across Business Services.</h5>
          </div>
        </div>
        <div class="table-responsive h-400-with-scroll overflow-auto">
          <table class="table bg-white">
            <thead>
              <tr class="border-top-0">
                <th class="text-capitalize font-12 text-light-grey border-0">
                  Supplier Name
                </th>
                <th class="text-capitalize font-12 text-light-grey border-0">
                  Party Type
                </th>
                <th class="text-capitalize font-12 text-light-grey border-0">
                  Business Service
                </th>
                <th class="text-capitalize font-12 text-light-grey border-0">
                  Service Tier
                </th>
                <th class="text-capitalize font-12 text-light-grey border-0">
                  Total number of critical steps underpinned
                </th>
                <th class="text-capitalize font-12 text-light-grey border-0">
                  Total number of important steps underpinned
                </th>
              </tr>
            </thead>
            <tbody>
              <% data.instance_of?(Array) && data&.each do |supplier|%>
                <tr>
                  <td class="text-uppercase font-14 font-xxl-14 font-700 py-4 w-25"><%= supplier&.dig(:supplier_name) %></td>
                  <td class="font-14 font-xxl-14 py-4">
                    <span class="font-500"><%= supplier&.dig(:party_type).titleize %></span>
                  </td>
                  <td class="font-14 font-xxl-14 py-4">
                    <span class="font-500"><%= supplier&.dig(:bsl_name).titleize %></span>
                  </td>
                  <td class="font-14 font-xxl-14 py-4">
                    <span class="font-500"><%= supplier&.dig(:tier).humanize %></span>
                  </td>
                  <td class="font-14 font-xxl-14 py-4">
                    <span class="font-500"><%= supplier&.dig(:total_critical_steps) %></span>
                  </td>
                  <td class="font-14 font-xxl-14 py-4">
                    <span class="font-500"><%= supplier&.dig(:total_important_steps) %></span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
