<div class="card border-0 shadow-sm rounded-50 overflow-hidden">
  <div class="card-body pt-5">
    <div class="row border-bottom w-100 mx-auto mb-5">
      <div class="col-md-6 col-lg-4 order-lg-1 order-2 mb-lg-0 mb-4">
        <div id="bsl-suppliers-<%= sla_attr.dasherize%>" class="lazy-graph" data-key="supplier_tiers" data-args="<%= { supplier: supplier&.ids&.present? ? supplier.ids : 0 }.to_json %>" data-append-to="bsl-suppliers-<%= sla_attr.dasherize%>" data-partial-name="bsl_suppliers_critical_important">
          <%= render 'organisation/graphs/partials/bsl_suppliers_critical_important', data: {} %>
        </div>
      </div>
      <div class="col-md-6 col-lg-4 order-lg-1 order-2 mb-lg-0 mb-4">
        <div id="bsl-impact-tolerance-breakdown-<%= sla_attr.dasherize%>" class="lazy-graph" data-key="supplier_impact_tolerance_breakdown" data-args="<%= { sla_attr: sla_attr, bsl: @bsl.id, supplier: supplier&.ids&.present? ? supplier.ids : 0 }.to_json %>" data-append-to="bsl-impact-tolerance-breakdown-<%= sla_attr.dasherize%>" data-partial-name="impact_tolerance_breakdown">
          <%= render 'organisation/graphs/partials/impact_tolerance_breakdown', data: {} %>
        </div>
      </div>
      <div id="bsl-sla-conformance-<%= sla_attr.dasherize%>" class="col-md-6 col-lg-4 order-lg-1 order-2 mb-lg-0 mb-4 lazy-graph" data-key="bsl_supplier_conformance_impact_tolerance" data-args="<%= { sla_attr: sla_attr, bsl: @bsl.id, supplier: supplier&.ids&.present? ? supplier.ids : 0 }.to_json %>" data-append-to="bsl-sla-conformance-<%= sla_attr.dasherize%>" data-partial-name="bsl_supplier_conformance_impact_tolerance_v1">
        <%= render 'organisation/graphs/partials/bsl_supplier_conformance_impact_tolerance_v1', data: {} %>
      </div>
    </div>
      <div id="bsl-compound-resilience-breakdown-<%= sla_attr.dasherize%>" class="row mt-0 no-gutters lazy-graph" data-key="bsl_compound_resilience_breakdown" data-args="<%= { sla_attr: sla_attr, bsl: @bsl.id, supplier: supplier&.ids&.present? ? supplier.ids : 0 }.to_json %>" data-append-to="bsl-compound-resilience-breakdown-<%= sla_attr.dasherize%>" data-partial-name="bsl_compound_resilience_breakdown">
      <%= render 'organisation/graphs/partials/bsl_compound_resilience_breakdown', data: {} %>
     </div>
  </div>
</div>
