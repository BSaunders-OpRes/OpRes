<div class="input-fields mb-4 pb-4 border-bottom border-top-0 nested-fields bsl-step">
  <div class="row align-items-center">
    <div class="col-sm-12 my-3 d-flex justify-content-between align-items-center">
      <span>
        <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
        <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
        <span class="font-14 font-600 ml-1 text-capitalize">
          step
          <span class="bsl-step-number"><%= f.object.number %></span>
          <%= f.number_field :number, class: 'd-none bsl-step-field bsl-step-number-field' %>
        </span>
      </span>
      <span>
        <%= link_to 'javascript:void(0);', class: 'text-decoration-none text-black bsl-step-up' do %>
          <i class="fa fa-arrow-circle-up font-20 mr-2"></i>
        <% end %>
        <%= link_to 'javascript:void(0);', class: 'text-decoration-none text-black bsl-step-down' do %>
          <i class="fa fa-arrow-circle-down font-20 mr-2"></i>
        <% end %>
        <%= link_to_remove_association f, data: { 'step-id': f.object.id }, class: 'trash-btn text-decoration-none bsl-step-bin' do %>
          <i class="fa fa-trash font-20 text-danger" aria-hidden="true"></i>
        <% end %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 field-scroll">
      <%= f.text_field :name, class: 'w-100 font-12 form-control mb-3 shadow-none h-auto py-3 bsl-step-field bsl-step-name', placeholder: 'Enter Name', required: true %>
      <%= f.text_area :description, class: 'form-control font-12 shadow-none mb-3 bsl-step-field', placeholder: 'Add Description', cols: 30, rows: 4, required: true %>
    </div>
  </div>
  <div class="row bsl-step-supplier-selected">
    <%= f.fields_for :supplier_steps do |supplier_step| %>
      <%= render '/organisation/business_service_lines/partials/supplier_selected_fields', f: supplier_step %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-12 mt-4">
      <span class="bsl-step-supplier-modal-opener cursor-pointer toggle-modal d-inline-block">
        <i class="fa fa-plus-circle" aria-hidden="true"></i>
        <span class="font-14 font-600 ml-1 text-capitalize cursor-pointer" >add suppliers</span>
      </span>
    </div>
  </div>
</div>
