<% if @countries %>
  $("#countries").html('<%= escape_javascript render "organisation/business_service_lines/partials/drop_down", options: @countries&.map{|unit| [unit.name, unit.id] }, prompt_message: "Select your country", path: "business_service_line[country]" %>');
<% else %>
  $("#countries").html("<%= escape_javascript render 'organisation/business_service_lines/partials/drop_down', options: {}, path: "business_service_line[country]", prompt_message: "Select your country" %>");
  $("#institutions").html("<%= escape_javascript render 'organisation/business_service_lines/partials/drop_down', options: {}, path: "business_service_line[institution]", prompt_message: "Select your institution" %>");
<% end %>
