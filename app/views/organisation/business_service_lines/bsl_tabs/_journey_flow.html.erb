<div class="tab-pane fade" id="journey-tab" role="tabpanel" aria-labelledby="profile-tab">
  <h5 class="font-600 text-capitalize">service line process</h5>
  <div class="mt-5" id="dynamic-steps-block">
    <% stepNumber = 0 %>
    <%= form.fields_for :steps do |step| %>
      <div id="step-block">
        <% if @bsl.steps.present? %>
          <% @bsl.steps.each do |bsl_step| %>
            <% stepNumber = stepNumber + 1 %>
            <%= render '/organisation/business_service_lines/step_fields', { f: step, bslSteps: bsl_step, index: stepNumber } %>
          <% end %>
        <% end %>
      </div>
    <% end %>
      <div class="input-fields mb-4 pb-4">
        <div class="row align-items-center">
          <div class="col-sm-12">
            <span>
              <%= link_to_add_association form, :steps, class: 'add-step-btn text-decoration-none', render_options: {locals: { index: stepNumber }} do %>
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span class="font-14 font-600 ml-1 text-capitalize cursor-pointer">add another step</span>
              <% end %>
            </span>
          </div>
        </div>
      </div>
  </div>
</div>

<div id="new_supplier"></div>
