<div class="row mt-4">
  <div class="col-md-12">
    <div class="card border-0 shadow-sm rounded-50">
      <div class="text px-4 py-4 d-flex justify-content-between align-items-center">
        <h2 class="card-heading font-18 font-600 text-left">Compound Risk Posture</h2>
        <!-- <i class="fa fa-ellipsis-v mx-1 text-right card-heading-icon" aria-hidden="true"></i> -->
      </div>
      <div class="row d-flex no-gutters">
        <div class="col-md-6 col-lg-4 order-lg-4 order-1 mb-lg-0 mb-4 px-1">
          <div class="card border-0 rounded-50">
            <div class="card-body">
              <div class="d-flex align-items-center justify-content-center px-3 text-center">
                <h5 class="font-14 font-600 text-center text-capitalize">Conformance With Impact Tolerance</h5>
              </div>
              <div class="row align-items-center">
                <div class="col-md-12">
                  <div class="position-relative">
                  <%= link_to 'javascript:void(0);', class: 'text-decoration-none text-black' do %>
                    <div id="bsl-supplier-conformance-impact-tolerance" class="lazy-graph" data-key="bsl_supplier_conformance_impact_tolerance" data-args="<%= { bsl: @bsl.id }.to_json %>" data-append-to="bsl-supplier-conformance-impact-tolerance" data-partial-name="bsl_supplier_conformance_impact_tolerance">
                      <%= render 'organisation/graphs/partials/bsl_supplier_conformance_impact_tolerance', data: {} %>
                    </div>
                  <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4 order-lg-4 order-1 mb-lg-0 mb-4 px-1">
          <div class="card border-0 rounded-50">
            <div class="card-body">
              <div class="d-flex align-items-center justify-content-center px-3 text-center">
                <h5 class="font-14 font-600 text-capitalize">Critical System Resilience RAG</h5>
              </div>
              <div class="row align-items-center">
                <div class="col-md-12">
                  <div class="position-relative">
                    <%= link_to compound_resilience_organisation_business_service_line_path(@bsl, supplier_type: SupplierStep.importance_levels[:critical]), class: 'text-decoration-none text-black' do %>
                      <div id="bsl-supplier-critical-system" class="lazy-graph" data-key="bsl_supplier_conformance_impact_tolerance" data-args="<%= { bsl: @bsl.id, critical_system: true }.to_json %>" data-append-to="bsl-supplier-critical-system" data-partial-name="bsl_supplier_systems">
                          <%= render 'organisation/graphs/partials/bsl_supplier_systems', data: {} %>
                        </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4 order-lg-4 order-1 mb-lg-0 mb-4 px-1">
          <div class="card border-0 rounded-50">
            <div class="card-body">
              <div class="d-flex align-items-center justify-content-center text-center px-3">
                <h5 class="font-14 font-600 text-capitalize">Important System Resilience RAG</h5>
              </div>
              <div class="row align-items-center">
                <div class="col-md-12">
                  <div class="position-relative">
                    <%= link_to compound_resilience_organisation_business_service_line_path(@bsl, supplier_type: SupplierStep.importance_levels[:important]), class: 'text-decoration-none text-black' do %>
                      <div id="bsl-supplier-important-system" class="lazy-graph" data-key="bsl_supplier_conformance_impact_tolerance" data-args="<%= { bsl: @bsl.id, important_system: true }.to_json %>" data-append-to="bsl-supplier-important-system" data-partial-name="bsl_supplier_systems">
                          <%= render 'organisation/graphs/partials/bsl_supplier_systems', data: {} %>
                        </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="top-5-table px-4">
