<div class="row mt-5">
  <div class="col-md-7 mx-auto">
    <div class="card shadow">
      <div class="d-flex justify-content-between align-items-center py-3 px-4">
        <h5 class="text-capitalize font-700">Unit Admin</h5>
        <%= link_to new_organisation_unit_admin_path, class: 'text-capitalize font-12 ml-auto text-black text-decoration-none d-flex' do %>
          <i class="fa fa-plus-circle r-1 font-20" aria-hidden="true"></i>
          <span class="ml-2 font-14">Add New</span>
        <% end %>
      </div>
      <div class="table-search-field px-4 mb-2">
        <i class="fa fa-search text-dark font-14" aria-hidden="true"></i>
        <input type="text" placeholder="search institutions" class="w-100 form-control border-0 shadow-none">
      </div>
      <div class="table-responsive">
        <% if @unit_admins.present? %>
          <table class="table custom-table font-12 m-0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @unit_admins.each do |unit_admin| %>
                <tr>
                  <td class="text-dark"><%= unit_admin.name %></td>
                  <td><%= unit_admin.email %></td>
                  <td>
                    <%= link_to 'View', organisation_unit_admin_path(unit_admin), class: 'font-12 font-700 mx-1 text-dark text-uppercase' %>
                    <%= link_to 'Edit', edit_organisation_unit_admin_path(unit_admin), class: 'font-12 font-700 mx-1 text-dark text-uppercase' %>
                    <%= link_to 'Delete', organisation_unit_admin_path(unit_admin), method: :delete, data: { confirm: 'Are you sure?' }, class: 'font-12 font-700 mx-1 text-dark text-uppercase' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="alert alert-primary m-0" role="alert">
            No Unit Admins are created yet!
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
