<div class="modal resilience-ticket-modal my-5 py-5 pr-0" id="resilience-ticket-modal" tabindex="-1" role="dialog" aria-labelledby="new-supplier-modal-1" aria-hidden="true">
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header border-0 p-4">
        <h5 class="modal-title text-capitalize font-18">
          Resilience Record
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body px-4 pt-4">
        <div class="box">
          <div class="resilience-gap-text d-flex align-items-start align-items-lg-center justify-content-between flex-column flex-lg-row">
            <div class="info-text mb-4 pb-2">
              <div class="d-flex flex-wrap">
                <h6 class="font-14 mr-2">Resilience Gap ID: <%= @resilience_ticket.rgid %></h6>
              </div>
              <span class="font-12 text-light-grey">Date Created <%= @resilience_ticket.created_at.strftime('%d-%m-%y') %></span>
              <p class="mt-3">
                <span class="font-600 mr-3 font-12">Impacted Business Service:</span>
                <span class="font-12"><%= @resilience_bsl.name %></span>
              </p>
            </div>
           <div class="info-text mb-4">
            <div class="filter-grouped d-flex align-items-center justify-content-start info-text mb-5">
              <span class="p-2 bg-body-color text-black px-3 rounded font-600 text-capitalize font-12">
                <%= @resilience_ticket.status %>
              </span>
            </div>
            </div>
          </div>
          <div class="details">
            <div class="table-responsive">
              <table class="table mb-0">
                <thead>
                  <tr>
                    <th class="border-bottom-0 font-weight-500 font-12 text-light-grey" scope="col">Date Of Update</th>
                    <th class="border-bottom-0 font-weight-500 font-12 text-light-grey" scope="col">Update Made By</th>
                    <th class="border-bottom-0 font-weight-500 font-12 text-light-grey" scope="col">Update Description</th>
                    <th class="border-bottom-0 font-weight-500 font-12 text-light-grey" scope="col">Attachment</th>
                  </tr>
                </thead>
                <tbody>
                  <% @resilience_audits&.each do |resilience_audit| %>
                    <tr>
                      <td class="font-12 font-weight-500"><%= resilience_audit.updated_at.strftime('%d-%m-%y')%></td>
                      <td class="font-12 font-weight-500">Jane Doe</td>
                      <td class="font-12 font-weight-500"><%= resilience_audit.description %></td>
                      <td class="font-12 font-weight-500">
                        <% if resilience_audit.attachment.present? %>
                          <div class="attach font-12 d-flex align-items-center">
                            <i class="fa fa-paperclip paperclip font-16 align-middle mr-1"></i>
                            <span class="align-middle"><%= resilience_audit.attachment.filename %></span>
                          </div>
                        <% else %>
                          <span>No, attachment attached.</span>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
