<div id='my-account' class="my-account">
  <div class="row no-gutters mb-md-5">
    <div class="col-sm-12 px-1">
      <div class="d-flex justify-content-between align-items-center flex-wrap">
        <div class="left d-flex align-items-center flex-wrap">
          <div class="mr-4 back-btn mb-xs-2">
            <%= render 'layouts/partials/shared/redirect_back', path: organisation_dashboard_index_path %>
          </div>
          <h2 class="font-600 font-sm-18 font-25 text-capitalize">My Account</h2>
        </div>
      </div>
    </div>
  </div>
  <div class="row no-gutters mt-4">
    <div class="col-sm-3 col-xxl-2 px-1">
      <aside class="fixed-secondary-sidebar position-static" id='sticky-sidebar-demo'>
        <i class="fa fa-times-circle fa-1x d-none"></i>
        <ul class="p-0 list-unstyled inner-wrapper-sticky">
          <li class="links active-white mb-2">
            <a href="#my-details" class=" text-decoration-none text-capitalize font-13 font-xxl-14 d-block py-2">My Details</a>
          </li>
          <li class="links mb-2">
            <a href="#overview" class=" text-decoration-none text-capitalize font-13 font-xxl-14 d-block py-2">Access</a>
          </li>
          <!-- <li class="links mb-2">
            <a href="#notification" class=" text-decoration-none text-capitalize font-13 font-xxl-14 d-block py-2">Notification</a>
          </li> -->
        </ul>
      </aside>
    </div>
    <div class="col-sm-9 col-xxl-10 px-1">
      <div class="w-100">
        <div class="content-area">
          <%= form_tag save_account_organisation_accounts_path do %>
            <div id="my-details">
              <div class="card border-0 rounded-50 mb-4">
                <div class="card-body">
                  <div class="d-flex align-items-center justify-content-between">
                    <h5 class="font-600 text-capitalize">overview</h5>
                  </div>
                  <div class="mt-3">
                    <%= render 'layouts/partials/shared/form_errors', instance: current_user %>
                  </div>
                  <div class="input-fields mt-5">
                    <div class="row align-items-center mb-4">
                      <div class="col-sm-4 flex-sm-1 mb-2 mb-sm-0">
                        <p class="text-capitalize font-14 font-600">first name</p>
                      </div>
                      <div class="col-sm-6 order-3 order-sm-2">
                        <%= text_field_tag 'user[first_name]', nil, value: current_user.first_name, class: 'w-100 form-control font-12 h-auto py-3 shadow-none', placeholder: 'First Name', required: true %>
                      </div>
                      <div class="col-sm-2 text-right order-2 flex-sm-half mb-2 mb-sm-0">
                        <div class="info" data-toggle="tooltip" data-placement="top" title="First Name" aria-hidden="true">i</div>
                      </div>
                    </div>
                    <div class="row align-items-center mb-4">
                      <div class="col-sm-4 flex-sm-1 mb-2 mb-sm-0">
                        <p class="text-capitalize font-14 font-600">last name</p>
                      </div>
                      <div class="col-sm-6 order-3 order-sm-2">
                        <%= text_field_tag 'user[last_name]', nil, value: current_user.last_name, class: 'w-100 form-control font-12 h-auto py-3 shadow-none', placeholder: 'First Name', required: true %>
                      </div>
                      <div class="col-sm-2 text-right order-2 flex-sm-half mb-2 mb-sm-0">
                        <div class="info" data-toggle="tooltip" data-placement="top" title="Last Name" aria-hidden="true">i</div>
                      </div>
                    </div>
                    <div class="row align-items-center mb-4">
                      <div class="col-sm-4 flex-sm-1 mb-2 mb-sm-0">
                        <p class="text-capitalize font-14 font-600">title</p>
                      </div>
                      <div class="col-sm-6 order-3 order-sm-2">
                        <%= text_field_tag 'user[job_title]', nil, value: current_user.job_title, class: 'w-100 form-control font-12 h-auto py-3 shadow-none', placeholder: 'Job Title', required: true %>
                      </div>
                      <div class="col-sm-2 text-right order-2 flex-sm-half mb-2 mb-sm-0">
                        <div class="info" data-toggle="tooltip" data-placement="top" title="Job Title" aria-hidden="true">i</div>
                      </div>
                    </div>
                    <div class="row align-items-center mb-4">
                      <div class="col-sm-4 flex-sm-1 mb-2 mb-sm-0">
                        <p class="text-capitalize font-14 font-600">email address</p>
                      </div>
                      <div class="col-sm-6 order-3 order-sm-2">
                        <input type="text" class='w-100 form-control font-12 h-auto py-3 shadow-none' placeholder="email@example.com">
                      </div>
                      <div class="col-sm-2 text-right order-2 flex-sm-half mb-2 mb-sm-0">
                        <div class="info" data-toggle="tooltip" data-placement="top" title="Email" aria-hidden="true">i</div>
                      </div>
                    </div>
                    <div class="row align-items-end d-flex mt-5 mb-4 border-top">
                      <div class="col-sm-12 text-right pull-right mt-5">
                        <%= submit_tag 'Save', class: 'btn black-btn w-150px rounded-40 font-600' %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <div id="overview">
            <div class="card border-0 rounded-50 mb-4">
              <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                  <h5 class="font-600 text-capitalize">access</h5>
                </div>
                <div class="input-fields mt-5">
                  <div class="row mb-4">
                    <div class="col-sm-4 flex-sm-1 mb-2 mb-sm-0">
                      <p class="text-capitalize font-14 font-600 mb-4">user profile permissions</p>
                    </div>
                    <div class="col-sm-6 order-3 order-sm-2">
                      <div class="d-flex flex-column">
                        <label for="ch1" class="custom-checkbox mb-4 d-flex align-items-center p-0">
                          <span class="order-2 pl-2 text-capitalize font-13 font-xxl-14 font-400">root user</span>
                          <%= check_box_tag 'user[role][]', 'root_user', current_user.role == "root_user" ? true : false, id: "root_user" %>
                          <span class="checkmark position-relative order-1"></span>
                        </label>
                        <label for="ch2" class="custom-checkbox mb-4 d-flex align-items-center p-0">
                          <span class="order-2 pl-2 text-capitalize font-13 font-xxl-14 font-400">super user</span>
                          <%= check_box_tag 'user[role][]', 'super_user', current_user.role == "super_user" ? true : false, id: "super_user" %>
                          <span class="checkmark position-relative order-1"></span>
                        </label>
                        <label for="ch3" class="custom-checkbox mb-4 d-flex align-items-center p-0">
                          <span class="order-2 pl-2 text-capitalize font-13 font-xxl-14 font-400">user</span>
                          <%= check_box_tag 'user[role][]', 'user', current_user.role == "standard_user" ? true : false, id: "user" %>
                          <span class="checkmark position-relative order-1"></span>
                        </label>
                      </div>
                    </div>
                    <div class="col-sm-2 text-right order-2 flex-sm-half mb-2 mb-sm-0">
                      <div class="info" data-toggle="tooltip" data-placement="top" title="user profile permissions" aria-hidden="true">i</div>
                    </div>
                  </div>
                </div>
                <div class="input-fields mt-5">
                  <div class="row mb-4">
                    <div class="col-sm-4 flex-sm-1 mb-2 mb-sm-0">
                      <p class="text-capitalize font-14 font-600 mb-4">regional data access permissions</p>
                    </div>
                    <div class="col-sm-6 order-3 order-sm-2">
                      <div class="d-flex flex-column">
                        <% regional_units = organisational_unit.children %>
                        <% Region.all.each do |region| %>
                          <label for="<%= region.id %>" class="custom-checkbox mb-4 d-flex align-items-center p-0">
                            <span class="order-2 pl-2 text-capitalize font-13 font-xxl-14 font-400"><%= region.name %></span>
                            <%= check_box_tag 'user[region][]', 'user', regional_units.pluck(:region_id).include?(region.id), id: "#{region.id}" %>
                            <span class="checkmark position-relative order-1"></span>
                          </label>
                        <% end %>
                      </div>
                    </div>
                    <div class="col-sm-2 text-right order-2 flex-sm-half mb-2 mb-sm-0">
                      <div class="info" data-toggle="tooltip" data-placement="top" title="regional data access permissions" aria-hidden="true">i</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
