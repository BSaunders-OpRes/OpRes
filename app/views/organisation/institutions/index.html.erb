<div class="row">
  <div class="col-sm-12 col-md-10 col-lg-8 col-xxl-8 mx-auto">
    <div class='card border-0 shadow'>
      <div class='card-body p-0'>
        <div class="listings">
          <div class="d-flex justify-content-between align-items-center py-3 px-4 mt-3">
            <h5 class="text-capitalize font-700">Institutions</h5>
            <%= link_to new_organisation_institution_path, class: 'font-600 text-capitalize font-12 ml-auto text-black text-decoration-none d-flex' do %>
              <i class="fa fa-plus-circle mr-1 font-20"></i>
              <span class="ml-2 font-14">Add New</span>
            <% end %>
          </div>
          <div class="table-search-field px-4">
            <i class="fa fa-search text-dark font-14" aria-hidden="true"></i>
            <input type="text" placeholder="search institutions" class="w-100 form-control border-0 shadow-none">
          </div>
          <% if @institutions.present? %>
            <div class="table-responsive">
              <table class="table custom-table font-12 m-0">
                <thead>
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @institutions.each do |institution| %>
                    <tr>
                      <td class="text-dark"><%= institution.name %></td>
                      <td><%= institution.description %></td>
                      <td>
                        <%= link_to 'View', organisation_institution_path(institution), class: 'mx-1 text-dark font-700 text-uppercase' %>
                        <%= link_to 'Edit', edit_organisation_institution_path(institution), class: 'mx-1 text-dark font-700 text-uppercase' %>
                        <%= link_to 'Delete', organisation_institution_path(institution), method: :delete, data: { confirm: 'Are you sure?' }, class: 'font-12 font-700 mx-1 text-dark text-uppercase' %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="alert alert-primary m-0" role="alert">
              No institutions are created yet!
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
