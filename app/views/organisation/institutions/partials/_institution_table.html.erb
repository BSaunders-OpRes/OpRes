<% if institutions.present? %>
  <div class="table-responsive">
    <table class="table custom-table font-12 m-0">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% institutions.each do |institution| %>
          <tr>
            <td class="text-dark"><%= institution.name %></td>
            <td><%= institution.description %></td>
            <td>
              <%= link_to 'View', organisation_institution_path(institution), class: 'mx-1 text-dark font-700 text-uppercase' %>
              <%= link_to 'Edit', edit_organisation_institution_path(institution), class: 'mx-1 text-dark font-700 text-uppercase' %>
              <%= link_to 'Delete', organisation_institution_path(institution), method: :delete, data: { confirm: 'Are you sure?' }, class: 'font-12 font-700 mx-1 text-dark text-uppercase' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-primary m-0" role="alert">
    No institutions are created yet!
  </div>
<% end %>