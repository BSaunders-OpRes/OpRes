<%= form_for institution, url: new_or_create ? organisation_institutions_path : organisation_institution_path, method: new_or_create ? :post : :patch do |f| %>
  <%= render 'layouts/partials/shared/form_errors', instance: institution %>
  <div class="row align-items-center mb-3">
    <div class="col-md-12 form-group">
      <%= f.label :name, class: 'text-capitalize' %>
      <%= f.text_field :name, class: 'w-100 form-control font-12 h-auto py-3 shadow-none', placeholder: 'Institution Name', required: true %>
    </div>
    <div class="col-md-12 form-group">
      <%= f.label :description, class: 'text-capitalize' %>
      <%= f.text_area :description, class: 'w-100 form-control font-12 shadow-none', placeholder: 'Institution Description', required: true %>
    </div>
  </div>
  <div class="d-flex mt-5">
    <%= f.submit class: 'btn btn-md font-600 text-capitalize font-12 ml-auto dark-btn w-25' %>
  </div>
<% end %>
