<div class="bg-body-color py-3"></div>
<div class="row">
  <div class="col-md-12">
    <div class="card border-0 text-center">
    <%= form_tag organisation_journey_path("country_setup/#{@region_operator.lower_name}"), remote: true do %>
      <div class="card-body px-sm-5 p-3">
        <div class="d-flex justify-content-between my-3">
        <%= link_to organisation_journey_path("account_setup/#{@region_operator.lower_name}"), class: 'text-capitalize text-dark text-decoration-none' do %>
          <span><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
          <span class="ml-2 text-black">Back</span>
        <% end %>
        <%= link_to organisation_journey_path("country_setup/#{@region_operator.lower_name}"), class: 'text-capitalize text-dark text-decoration-none' do %>
          <span class="mr-2 text-secondary">Next</span>
          <span><i class="fa fa-arrow-right text-secondary" aria-hidden="true"></i></span>
        <% end %>

        </div>
        <h1 class="text-dark font-30 text-black"><%= @region_operator.name %> Countries</h1>
        <div class="w-sm-50 w-100 mx-auto">
          <p class="font-13 font-xxl-14 mx-auto font-500 mt-4 text-black">Please tell us which countries you operates in across <%= @region_operator.name %>.
          </p>
          <div class="form-group">
            <div class="search-field my-4">
              <i class="fa fa-search"></i>
              <input type="text" class="bg-body-color form-control font-12 border-0 shadow-none" placeholder="Search countries">
            </div>
          </div>
          <div class="text-right mb-4">
            <a href="" class="text-decoration-none text-capitalize font-12 text-black font-600 font-xxl-14">select all</a>
          </div>
        </div>
        <div class="h-522">
          <div class="w-md-50 w-100 px-2 mx-auto">
            <% country_units = @regional_unit.children %>
            <% @all_countries.each do |country| %>
              <div class="form-group mb-4">
                  <label class="d-flex justify-content-between align-items-center custom-checkbox px-0 pb-4 border-bottom" for="<%= "country-#{country.name.parameterize}" %>">
                    <span class="text-uppercase font-14 font-400"><%= country.name %></span>
                    <%= check_box_tag "countries[#{country.id}]", country.name, country_units.pluck(:country_id).include?(country.id), class: 'form-control w-auto', id: "country-#{country.name.parameterize}" %>
                    <span class="checkmark position-relative"></span>
                  </label>
              </div>
            <% end %>
          </div>
        </div>
        <div class="w-md-50 w-100 mx-auto my-4">
          <div class="row">
            <div class="col-md-4 col-sm pr-md-1 px-auto mb-sm-0 mb-3">
              <%= link_to 'save & exit',organisation_journey_path("account_setup/#{@region_operator.lower_name}"), class: 'text-capitalize btn-outline-secondary border font-500 font-12 w-100 py-2 text-black rounded border-0' %>
            </div>
            <div class="col-md-8 col-sm pl-md-1 px-auto">
            <%= submit_tag 'Next', class: 'text-capitalize dark-btn font-500 font-12 w-100 py-2 rounded border-0' %>
            </div>
          </div>
        </div>
        <div class="horizondatl-eclipse">
          <span class="active-circle"><i class="fa fa-circle font-12" aria-hidden="true"></i></span>
          <span class="active-circle"><i class="fa fa-circle text-secondary font-12" aria-hidden="true"></i></span>
          <span class="active-circle"><i class="fa fa-circle text-secondary font-12" aria-hidden="true"></i></span>
        </div>
      </div>
    <% end %>  
    </div>
  </div>
</div>
