<div class="bg-body-color py-3"></div>
<div class="row">
  <div class="col-md-12">
    <div class="card border-0 text-center">
    <%= form_tag organisation_journey_path("country_setup/#{@region_operator.lower_name}"), id: 'country-setup-form', remote: true do %>
      <div class="card-body px-sm-5 p-3">
        <div class="d-flex justify-content-between my-3">
        <%= link_to organisation_journey_path("account_setup/#{@region_operator.lower_name}"), class: 'text-capitalize text-dark text-decoration-none' do %>
          <span><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
          <span class="ml-2 text-black">Back</span>
        <% end %>
        <%= button_tag type: 'submit', class: 'wait-loader text-capitalize text-dark text-decoration-none border-0 bg-transparent' do %>
          <span class="mr-2">Next</span>
          <span><i class="fa fa-arrow-right" aria-hidden="true"></i></span>
        <% end %>
        </div>
        <h1 class="text-dark font-30 text-black"><%= @region_operator.name %> Countries</h1>
        <div class="w-sm-50 w-100 mx-auto">
          <p class="font-13 font-xxl-14 mx-auto font-500 mt-4 text-black">Please tell us which countries you operates in across <%= @region_operator.name %>.
          </p>
          <div class="form-group">
            <div class="search-field my-4">
              <i class="fa fa-search"></i>
              <input type="text" class="bg-body-color form-control font-12 border-0 shadow-none" placeholder="Search countries" id="country-search-filter" >
            </div>
          </div>
          <div class="w-100 px-2 mx-auto mb-4 mr-1 body-bg-color py-3 px-2 rounded">
            <label for="select-all-countries" class="custom-checkbox d-flex p-0 justify-content-between align-items-center m-0 mr-1">
              <span class="font-13 text-capitalize mr-2 font-600">select all</span>
              <input type="checkbox" class="text-decoration-none text-capitalize font-12 text-black font-600 font-xxl-14" id="select-all-countries" value="selectAll">
              <span class="checkmark position-relative"></span>
            </label>
          </div>
        </div>
        <div class="h-522">
          <div class="w-md-50 w-100 px-2 mx-auto">
            <div id="countries-partial">
             <%= render 'organisation/journeys/partials/countries' %>
            </div>
          </div>
        </div>
      </div>
      <div class="bottom-btns border-top py-3 bg-white">
        <div class="w-65 mx-auto">
          <div class="row w-100 mx-auto my-3">
            <div class="col-md-4 col-sm pr-md-1 px-auto mb-sm-0 mb-3">
              <%= link_to 'save & exit', 'javascript:void(0);', class: 'text-capitalize text-decoration-none border font-500 font-12 w-100 py-2 text-black rounded border-0 w-100 d-block bg-body-color wait-loader', id: 'journey-save-exit-countries' %>
            </div>
            <div class="col-md-8 col-sm pl-md-1 px-auto">
            <%= submit_tag 'Next', class: 'text-capitalize dark-btn font-500 font-12 w-100 py-2 rounded border-0 wait-loader', id: 'journey-submit-countries' %>
            </div>
          </div>
        </div>
        <div class="horizondatl-eclipse">
          <span class="active-circle"><i class="fa fa-circle font-12" aria-hidden="true"></i></span>
          <span class="active-circle"><i class="fa fa-circle text-secondary font-12" aria-hidden="true"></i></span>
          <span class="active-circle"><i class="fa fa-circle text-secondary font-12" aria-hidden="true"></i></span>
        </div>
      </div>
    <% end %>  
    </div>
  </div>
</div>
