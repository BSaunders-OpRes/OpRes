<%= form_tag organisation_journey_path('country-unit'), remote: true do %>
  <div class="card-body w-75 mx-auto font-14 mt-4 border">
    <div class="row">
      <div class="col-sm-12">
        <p class="font-14 body-bg-color p-2">
          <strong>Question:</strong> Please tell us the regions that your organisation operates in? You can select more than one region. If you forget to add a region, this can be updated later on.
        </p>
      </div>
      <div class="col-sm-12 mt-3">
        <div class="checkbox-container d-flex justify-content-start flex-wrap">
          <% regional_units = organisational_unit.children %>
          <% Unit.regions.each do |region| %>
            <div class="form-check d-flex align-items-center mr-2 form-group col-12">
              <label class="form-check-label text-capitalize font-13 custom-checkbox" for="<%= "region-#{region.parameterize}" %>">
                <%= region %>
                <%= check_box_tag "regions[#{region}]", region, regional_units.pluck(:region).include?(region), class: 'form-check-input mt-0 shadow-none', id: "region-#{region.parameterize}" %>
                <span class="checkmark shadow-sm rounded"></span>
              </label>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="w-75 mx-auto mt-4">
    <div class="progress custom-progress">
      <div class="progress-bar progress-bar" role="progressbar" style="width: 20%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="d-flex justify-content-between font-12">
      <span>Step 2</span>
      <span>20%</span>
    </div>
  </div>
  <div class="card-body w-75 d-flex p-0 mx-auto justify-content-between my-4">
    <%= link_to 'Back', organisation_journey_path('organisational-unit'), class: 'btn dark-btn text-capitalize w-25 rounded-0' %>
    <%= submit_tag 'Next', class: 'btn primary-btn text-capitalize w-25 rounded-0' %>
  </div>
<% end %>
