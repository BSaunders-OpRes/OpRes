<div class="row">
  <div class="col-sm-12 col-md-10 col-lg-8 col-xxl-10 mx-auto">
    <div class="card border-0 shadow">
      <div class="card-body px-4">
        <div class="d-flex justify-content-between align-items-center py-5">
          <h3 class="text-capitalize font-600">Supplier Show</h3>
        </div>
        <%= render 'layouts/partials/shared/redirect_back', path: organisation_administration_portal_index_path %>
        <div class="show-page">
          <div class="row align-items-center">
            <div class="col-md-4">
              <div class="show-img">
                <%= image_pack_tag 'media/images/user-img.png', class: 'img-fluid' %>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card border-0">
                <div class="card-body">
                  <div class="row pb-4 border-bottom">
                    <div class="col-md-6">
                      <h6 class="font-14 text-capitalize font-700">Supplier Name</h6>
                    </div>
                    <div class="col-md-6">
                      <h5 class="font-14 text-capitalize text-secondary"><%= @supplier.name %></h5>
                    </div>
                  </div>
                  <div class="row py-4 border-bottom">
                    <div class="col-md-6">
                      <h6 class="font-14 text-capitalize font-700">organisational name</h6>
                    </div>
                    <div class="col-md-6">
                      <h5 class="font-14 text-capitalize text-secondary"><%= organisational_unit.name %></h5>
                    </div>
                  </div>
                  <div class="row py-4">
                    <div class="col-md-6">
                      <h6 class="font-14 text-capitalize font-700">Party Type</h6>
                    </div>
                    <div class="col-md-6">
                      <h5 class="font-14 text-capitalize text-secondary"><%= @supplier.party_type || 'N/A' %></h5>
                    </div>
                  </div>
                  <div class="row py-4">
                    <div class="col-md-6">
                      <h6 class="font-14 text-capitalize font-700">Contracting Terms</h6>
                    </div>
                    <div class="col-md-6">
                      <h5 class="font-14 text-capitalize text-secondary"><%= @supplier.contracting_terms || 'N/A' %></h5>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
