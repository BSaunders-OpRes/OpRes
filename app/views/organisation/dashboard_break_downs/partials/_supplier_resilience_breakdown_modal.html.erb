<div class="modal px-2 fade mt-5 pt-5" id="resilience-breakdown-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog max-width-sm-75 w-100 mx-auto">
    <div class="modal-content">
      <div class="modal-header border-0 pb-0">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body p-3">
        <div class="filter  d-flex justify-content-between mb-4 align-items-start">
          <div class="left d-flex align-items-center">
            <h5 class="modal-title text-capitalize font-400" id="exampleModalLabel"><%= breakdown_modal_heading(sla_attr, type) %></h5>
          </div>
          <div class="right d-flex">
            <div class="dropdown body-color-dropdown mr-2">
              <a id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class='dropdown-toggle text-capitalize py-2 pr-5 pl-2 d-flex align-items-center justify-content-start font-12 text-dark font-400 text-decoration-none text-capitalize' id='top-10'>high to low</a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item">Action</a>
                <a class="dropdown-item">Filter top 10</a>
                <a class="dropdown-item">Filter top 10</a>
              </div>
            </div>
          </div>
        </div>
        <div class="table-responsive h-400-with-scroll min-height-auto">
          <table class="table bg-white">
            <thead>
              <tr class="border-top-0">
                <th class="text-capitalize font-12 text-light-grey border-0">
                  supplier name
                </th>
                <th class="text-capitalize font-12 text-light-grey border-0">
                  firm impact tolerance target
                </th>
                <th class="text-capitalize font-12 text-light-grey border-0">
                  suppliers agreed impact tolerance
                </th>
                <th class="text-capitalize font-12 text-light-grey border-0">
                  difference
                </th>
                <th class="text-capitalize font-12 text-light-grey border-0">
                  resilience ID
                </th>
              </tr>
            </thead>
            <tbody>
              <% impact_tolerance_breakdown_data.dig(sla_attr, "#{type}_suppliers").each do |supplier| %>
                <tr>
                  <td class="text-uppercase font-12 font-xxl-14 font-700 py-4 w-25"><%= supplier.dig(:name) %></td>
                  <td class="font-12 font-xxl-14 py-4">
                    <span class="font-500"><%= supplier.dig(:firm_impact_tolerance) %></span>
                  </td>
                  <td class="font-12 font-xxl-14 py-4">
                    <span class="font-500"><%= supplier.dig(:supplier_agreed_impact_tolerance)%></span>
                  </td>
                  <td class="font-12 font-xxl-14 py-4">
                    <span class="font-500"><%= number_with_precision(supplier.dig(:difference), precision: 2) %></span>
                  </td>
                  <td class="font-12 font-xxl-14 py-4">
                    <span class="font-500">1</span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>