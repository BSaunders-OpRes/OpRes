<% bsls&.each do |bsl| %>
  <tr>
    <td class="font-12 py-0 pr-2 font-xxl-14 pl-0 text-black align-middle"><%= bsl.name %></td>
    <td class="font-12 py-0 font-xxl-14 font-400 text-capitalize px-2 align-middle">
      <span><%= bsl.tier.titleize %></span>
    </td>
    <td class="font-12 py-0 font-xxl-14 font-400 text-capitalize px-2 align-middle"><%= bsl.unit&.parent&.name %></td>
    <td class="font-12 py-0 font-xxl-14 font-400 text-capitalize px-2 align-middle"><%= bsl.unit&.parent&.parent&.name %></td>
    <td class="font-12 py-0 font-xxl-14 font-400 text-capitalize px-2 align-middle"><%= bsl.unit&.name %></td>
    <td class="font-12 py-0 font-xxl-14 font-400 text-capitalize px-2 align-middle">products</td>
    <% bsl_data = @bsl_impact_tolerances&.select{ |pl| pl&.dig(:bsl_id) == bsl.id}%>
    <td class="font-12 py-0 font-xxl-14 font-400 text-capitalize px-2 align-middle"><%= bsl_data&.first&.dig(:match) || 0 %></td>
    <td class="font-12 py-0 font-xxl-14 font-400 text-capitalize px-2 align-middle"><%= bsl_data&.first&.dig(:meet) || 0 %></td>
    <td class="font-12 py-0 font-xxl-14 font-400 text-capitalize px-2 align-middle"><%= bsl_data&.first&.dig(:exceed) || 0 %></td>
    <td class="font-12 py-0 d-flex py-4 px-2">
      <%= link_to 'Edit', edit_organisation_business_service_line_path(bsl), class: 'mx-1 text-black text-uppercase font-600 font-12' %>
      <%= link_to 'View', organisation_business_service_line_path(bsl), class: 'mx-1 text-black text-uppercase font-600 font-12' %>
    </td>
  </tr>
<% end %>
