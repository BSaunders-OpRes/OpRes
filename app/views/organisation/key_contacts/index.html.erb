<div class="row">
  <div class="col-sm-12 col-md-10 col-lg-8 col-xxl-8 mx-auto">
    <div class="card border-0 shadow">
      <div class='card-body p-0'>
        <div class="listings">
          <div class="d-flex justify-content-between align-items-center py-3 px-4 mt-3">
            <h5 class="text-capitalize font-700">Key Contacts</h5>
            <%= link_to new_organisation_key_contact_path, class: 'font-600 text-capitalize font-12 ml-auto text-black text-decoration-none d-flex' do %>
              <i class="fa fa-plus-circle mr-1 font-20"></i>
              <span class="ml-2 font-14">Add New</span>
            <% end %>
          </div>
          <div class="table-search-field px-4">
            <i class="fa fa-search text-dark font-14" aria-hidden="true"></i>
            <input type="text" placeholder="search institutions" class="w-100 form-control border-0 shadow-none">
          </div>
          <% if @key_contacts.present? %>
            <div class="table-responsive">
              <table class="table custom-table font-12 m-0">
                <thead>
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Job Title</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @key_contacts.each do |key_contact| %>
                    <tr>
                      <td class="text-dark"><%= key_contact.name %></td>
                      <td><%= key_contact.email %></td>
                      <td><%= key_contact.job_title %></td>
                      <td>
                        <%= link_to 'View', organisation_key_contact_path(key_contact), class: 'mx-1 text-dark font-700' %>
                        <%= link_to 'Edit', edit_organisation_key_contact_path(key_contact), class: 'mx-1 text-dark font-700' %>
                        <%= link_to 'Delete', organisation_key_contact_path(key_contact), method: :delete, data: {confirm: "Are you sure?"},
                          class: 'mx-1 text-dark font-700' %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="alert alert-primary m-0" role="alert">
              No Key Contact are created yet!
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
